  data-core-name="Enlightened Structures"
  data-core-gsheet="1GiXbr7Vj-dz3hRpwWns2i_SyS_IIF2KHDqgRJ8d_3qU"
  data-gsheet-orientation="rows"
  data-color-tiles="true"
  data-symbol-path=""
  data-hide-until-launch="false"
  data-renderer="D3"
  data-hex-fill="url(#radialgradient-blue)"
  data-launch-button="false"
  data-close-button="false"
  data-show-node-names="true"
  )


svg#core-network-d3(width='1000', height='600')
  defs
    radialgradient#radialgradient-blue(cx='50%', cy='50%', r='50%', fx='50%', fy='50%')
      stop.center(offset='0%')
      stop.periphery(offset='100%')

